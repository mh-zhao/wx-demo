/* components/item.wxss */
@import '../../app.wxss';
.product {
  margin-top: 30rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.product .p-main {
  display: flex;
}
.p-main .p-left {
  position: relative;
  width: 174rpx;
  height: 174rpx;
  overflow: hidden;
  margin-right: 24rpx;
  border-radius: 4px;
  display: flex;
  align-items: center;
}
.p-main .p-left image {
  width: 100%;
  max-height: 100%;
}
.p-main .p-left .p-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.5);
}
.p-main .p-desc {
  flex: 1;
}
.p-main .p-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 14rpx;
}
.p-foot {
  display: flex;
  padding-top: 36rpx;
}
.p-foot .p-f-left {
  display: flex;
  align-items: center;
}
.p-foot .p-f-right {
  flex: 1;
  text-align: right;
}
.van-button--normal {
  width: 152rpx;
  height: 64rpx;
  padding: 0;
}